                    android:textSize="24sp"
                    android:textColor="#424242"/>


            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="6dp"
                android:src="@drawable/portuguese_coin"/>

            <TextView
                android:id="@+id/a9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:text="Portugal"
                android:gravity="center_horizontal"
                android:textSize="18sp"
                android:textColor="#757575"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:orientation="vertical"
            android:padding="12dp"
            android:paddingTop="16dp"
            android:elevation="4dp"
            android:background="@drawable/shape_question">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/n10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10. "
                    android:textSize="24dp"
                    android:textColor="#424242" />

                <TextView
                    android:id="@+id/i10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Which country is this money from?"
                    android:textSize="24sp"
                    android:textColor="#424242"/>


            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="130dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="6dp"
                android:src="@drawable/russian_notes"/>

            <TextView
                android:id="@+id/a10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:text="Russia"
                android:gravity="center_horizontal"
                android:textSize="18sp"
                android:textColor="#757575"/>

        </LinearLayout>

        <Button
            android:id="@+id/retry_button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/shape_start_button"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center_horizontal"
            android:elevation="4dp"
            android:text="RESTART"
            android:textColor="@android:color/white"/>

    </LinearLayout>

